{% extends 'AcmeHelloBundle::base.html.twig' %}



{% block body %}
{{ knp_menu_render('AcmeHelloBundle:Builder:mainMenu') }}
{# total items count #}
<div class="count">
    {{ pagination.getTotalItemCount }}
</div>
<table width="100%"> 
<tr>
{# sorting of properties based on query components #}
    <th> {{ knp_pagination_sortable(pagination, 'Id', 'a.id') }} </th>
    <th{% if pagination.isSorted('a.name') %} class="sorted"{% endif %}> {{ knp_pagination_sortable(pagination, 'Title', 'a.name') }} </th>
       <th{% if pagination.isSorted('a.posx') %} class="sorted"{% endif %}> {{ knp_pagination_sortable(pagination, 'Pos-X', 'a.posx') }} </th>
       <th{% if pagination.isSorted('a.posy') %} class="sorted"{% endif %}> {{ knp_pagination_sortable(pagination, 'Pos-Y', 'a.posy') }} </th>
        <th> map </th>
    <th> grid </th>
    <th> level </th>
    <th> xp </th>
    <th> energy </th>
    <th> statpoints </th>
    <th> health </th>
    <th> attack </th>
    <th> finalAttack </th>
    <th> defence </th>
    <th> finalDefence </th>
    <th> idWeapon </th>
    <th> strength </th>
    
    
</tr>

{# table body #}
{% for article in pagination %}
<tr {% if loop.index is odd %}class="color"{% endif %}>
   
   
   <td><a href="/app_dev.php/show/{{article.id}}/{{type}}">{{article.id}}</a></td>
    <td><a href="/app_dev.php/show/{{article.name}}/{{type}}">{{article.name}}</a></td>  









</tr>
{% endfor %}
</table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>

{% endblock %}
