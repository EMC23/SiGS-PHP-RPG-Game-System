{% extends 'AppBundle::base.html.twig' %}
{% block body %}
    {{ knp_menu_render('AppBundle:Builder:mainMenu') }}
    {# total items count #}
    <div class="count">
    </div>
    <table id='myTable' width="100%">
        <thead>
        <tr >
            <th>  </th>
            <th> id </th>
            <th> name </th>
            <th> Category</th>
            <th> cellwidth</th>
            <th> cellheight</th>
            <th> numberofcells</th>
            <th></th>
        </tr></thead>
        {# table body #}
        {% for article in pagination %}
            <tr style = 'height:14px;' {% if loop.index is odd %}{% endif %}>
                <td>   <div style="width:{{ article.cellwidth }}px;
                            height:{{ article.cellheight }}px;
                            overflow:hidden;">
                        <img src="http://www.eclecticmeme.com/components/com_battle/images/assets/objects/{{ article.category }}/{{ article.name }}">
                    </div></td>
                <td><a href="/object_type?id={{article.id}}">{{article.id}}</a></td>
                <td><a href="/object_type?id={{article.id}}">{{article.name}}</a></td>
                <td><a href="/object_type?id={{article.id}}">{{article.category}}</a></td>
                <td><a href="/object_type?id={{article.id}}">{{article.cellWidth}}</a></td>
                <td><a href="/object_type?id={{article.id}}">{{article.cellHeight}}</a></td>
                <td><a href="/object_type?id={{article.id}}">{{article.numberOfCells}}</a></td>
            </tr>
        {% endfor %}
    </table>
    <a href="/objectTypes/new/">New</a>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    <script src="/scripts/MonsterTypes.js"></script>
{% endblock %}
