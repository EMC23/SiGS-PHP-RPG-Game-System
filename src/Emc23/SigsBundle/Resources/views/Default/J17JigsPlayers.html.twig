{% extends 'Emc23SigsBundle::base.html.twig' %}
{% block body %}

{# total items count #}
<div class="count">
    {{ pagination.getTotalItemCount }}
</div>
<table id = 'myTable' width="100%">
    <thead><tr>
{# sorting of properties based on query components #}
    <th>Id</th>
    <th>Title</th>
    <th>Pos-X</th>
    <th>Pos-Y</th>
    <th>map</th>
    <th>grid</th>
    <th>level</th>
    <th>xp</th>
    <th>energy</th>
    <th>statpoints</th>
    <th>health</th>
    <th>finalAttack</th>
    <th>finalDefence</th>
</tr></thead>

{# table body #}
{% for article in pagination %}
<tr {% if loop.index is odd %}class="color"{% endif %}>
    <td><a href="/players/{{article.id}}/">{{article.id}}</a></td>
    <td>{{article.name}}</td>
    <td>{{article.posx}}</td>
    <td>{{article.posy}}</td>
    <td>{{article.map}}</td>
    <td>{{article.grid}}</td>
    <td>{{article.level}}</td>
    <td>{{article.xp}}</td>
    <td>{{article.energy}}</td>
    <td>{{article.statpoints}}</td>
    <td>{{article.health}}</td>
    <td>{{article.finalAttack}}</td>
    <td>{{article.finalDefence}}</td>
</tr>
{% endfor %}
</table>
{# display navigation #}
<div class="navigation">
    {# knp_pagination_render(pagination) #}
</div>
{% endblock %}
