{% extends 'Emc23SigsBundle::base.html.twig' %}
{% block body %}

    {# total items count #}
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>
    <table width="100%">
        <tr>
            <th></th>
            <th> {{ knp_pagination_sortable(pagination, 'Id', 'a.id') }} </th>
            <th{% if pagination.isSorted('a.name') %} class="sorted"{% endif %}> {{ knp_pagination_sortable(pagination, 'Type', 'a.type') }} </th>

            <th> cellwidth</th>
            <th> cellheight</th>
            <th> numberofcells</th>
        </tr>

        {# table body #}
        {% for article in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>
                    <div style="width:{{ article.cellwidth }}px;
                                height:{{ article.cellheight }}px;
                            overflow:hidden;">
                        <img src="http://www.eclecticmeme.com/components/com_battle/images/assets/chars/monsters/{{ article.name }}/{{ article.spritesheet }}">
                    </div></td>
                <td>{{ article.id }}</td>
                <td> <a href="/monstertypes/{{ article.id }}/">{{ article.name }}</a></td>

                <td>{{ article.avatar }}</td>
                <td>{{ article.cellwidth }}</td>
                <td>{{ article.cellheight }}</td>
                <td>{{ article.numberofcells }}</td>
            </tr>
        {% endfor %}
    </table>

    <a href="/app_dev.php/new/{{ type }}">New</a>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
